{
  "name": "n8n-nodes-blockfrost",
  "version": "0.1.2",
  "description": "Comprehensive n8n node for Blockfrost API - Complete Cardano blockchain integration with 75+ endpoints covering blocks, epochs, governance, pools, transactions, and more",
  "keywords": [
    "n8n-community-node-package",
    "blockfrost",
    "cardano",
    "blockchain",
    "api",
    "ada",
    "cryptocurrency",
    "defi",
    "smart-contracts",
    "governance",
    "stake-pools",
    "transactions",
    "epochs",
    "mempool",
    "metadata"
  ],
  "license": "GPL-3.0",
  "homepage": "https://github.com/bevanamit/n8n-nodes-blockfrost",
  "author": {
    "name": "Amit A B (bevanamit)",
    "email": "bevanamit@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bevanamit/n8n-nodes-blockfrost.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node -e \"const fs=require('fs'); const path=require('path'); fs.mkdirSync('dist/nodes/Blockfrost', {recursive:true}); fs.copyFileSync('src/nodes/Blockfrost/blockfrost.svg', 'dist/nodes/Blockfrost/blockfrost.svg'); fs.copyFileSync('src/nodes/Blockfrost/blockfrost-credential.svg', 'dist/nodes/Blockfrost/blockfrost-credential.svg');\"",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lintfix": "eslint src/**/*.ts --fix"
  },
  "files": [
    "dist",
    "nodes/Blockfrost/*.svg"
  ],
  "n8n": {
    "nodes": [
      "dist/nodes/Blockfrost/Blockfrost.node.js"
    ],
    "credentials": [
      "dist/nodes/Blockfrost/Blockfrost.credentials.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "n8n-workflow": "^1.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@blockfrost/blockfrost-js": "^5.4.1",
    "n8n": "^1.112.5"
  }
}
